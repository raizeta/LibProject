{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<div class="container">
	{% if error %}
	    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<form  role="form" action="{{ path("fos_user_security_check") }}" method="post">
		<div class="form-group">
			<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
			<input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Username Or Email" required="required" />
			
		</div>
		<div class="form-group">
			<input class="form-control" type="password" id="password" name="_password" required="required" placeholder="Password" />
		</div>
		<div class="form-group">
	            <label>
	              <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Remember Me
	            </label>                      
	    </div><!-- /.col -->
	    <div class="form-group">
	          <button type="submit" class="btn btn-primary">Sign in</button>
	    </div>
	</form>
</div>
{% endblock %}
